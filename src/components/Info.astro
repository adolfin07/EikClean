<section
  id="info"
  class="relative py-12 px-6 lg:px-20 h-screen w-screen flex items-center justify-center bg-white
         bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)]
         bg-[size:6rem_4rem] -z-0 overflow-hidden"
>
  <!-- fondo de líneas detrás -->
  <div class="absolute inset-0 -z-20"></div>

  <!-- gradiente radial azul -->
  <div
    class="absolute inset-0 -z-10 bg-[radial-gradient(circle_500px_at_50%_200px,#C9EBFF,transparent)] pointer-events-none"
  ></div>

  <!-- contenido -->
  <div
    class="relative max-w-7xl mx-auto flex flex-col lg:flex-row items-center lg:items-start gap-10 z-0"
  >
    <!-- texto -->
    <div
      id="info-text"
      class="w-full lg:w-1/2 space-y-6 text-center lg:text-left opacity-0 translate-y-10 transition-all duration-700 ease-out"
    >
      <h1
        class="text-3xl sm:text-4xl lg:text-5xl font-extrabold leading-snug capitalize tracking-wide"
      >
        Lleva tus <span class="text-blue-500">sneakers impecables</span>
        sin preocuparte por el clima
      </h1>
      <p class="text-gray-600 text-base sm:text-lg max-w-xl mx-auto lg:mx-0">
        Servicio profesional de limpieza y restauración para sneakers,
        marcas de lujo y calzado especial. Calidad garantizada en cada
        detalle.
      </p>

      <!-- beneficios -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mt-8 max-w-xl mx-auto lg:mx-0">
        <div class="flex items-start gap-4">
          <div
            class="bg-blue-100 text-blue-600 p-3 rounded-full text-xl flex items-center justify-center"
          >
            <i class="fa-solid fa-droplet"></i>
          </div>
          <p class="text-gray-700 font-medium">
            Protección contra manchas y humedad
          </p>
        </div>
        <div class="flex items-start gap-4">
          <div
            class="bg-green-100 text-green-600 p-3 rounded-full text-xl flex items-center justify-center"
          >
            <i class="fa-solid fa-leaf"></i>
          </div>
          <p class="text-gray-700 font-medium">Productos eco-friendly</p>
        </div>
        <div class="flex items-start gap-4">
          <div
            class="bg-yellow-100 text-yellow-600 p-3 rounded-full text-xl flex items-center justify-center"
          >
            <i class="fa-solid fa-star"></i>
          </div>
          <p class="text-gray-700 font-medium">Limpieza premium y detallada</p>
        </div>
        <div class="flex items-start gap-4">
          <div
            class="bg-pink-100 text-pink-600 p-3 rounded-full text-xl flex items-center justify-center"
          >
            <i class="fa-solid fa-bolt"></i>
          </div>
          <p class="text-gray-700 font-medium">Entrega rápida y segura</p>
        </div>
      </div>
    </div>

    <!-- imagen -->
    <div
      id="info-img"
      class="w-full lg:w-1/2 flex justify-center lg:justify-end opacity-0 scale-90 transition-all duration-700 ease-out"
    >
      <img
        src="/imgs/sneakers-2.jpg"
        alt="Imagen de ejemplo"
        class="w-65 sm:w-69 md:w-72 lg:w-80 xl:w-[700px] mx-auto rounded-lg shadow-lg transform transition-transform duration-500 hover:scale-105 hover:rotate-3 cursor-pointer"
      />
    </div>
  </div>
</section>